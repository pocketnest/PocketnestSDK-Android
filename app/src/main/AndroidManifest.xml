<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sdkexample">

    <application
        android:allowBackup="true"
        android:label="Pocketnest SDK Sample"
        android:usesCleartextTraffic="true"
        android:launchMode="singleTop"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Optional: If you want the SDK deep links to launch the sample app -->
        <activity android:name="com.pocketnest.sdk.DeepLinkProxyActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="pocketnesthostedlink"/>
            </intent-filter>
        </activity>

        <activity android:name="com.pocketnest.sdk.WebViewActivity" />
    </application>
</manifest>
